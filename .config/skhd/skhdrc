# Open Terminal
hyper - return : open -n /Applications/Alacritty.app

# Focus window
hyper - left : yabai -m window --focus west
hyper - up : yabai -m window --focus north
hyper - right : yabai -m window --focus east
hyper - down : yabai -m window --focus south

# Swap managed window
hyper - j : yabai -m window --swap west
hyper - i : yabai -m window --swap north
hyper - l : yabai -m window --swap east
hyper - k : yabai -m window --swap south

# Send window to desktop and follow focus
hyper - u : yabai -m window --display next; yabai -m display --focus next
hyper - o : yabai -m window --display prev; yabai -m display --focus prev

# Rotate window
hyper - r : yabai -m space --rotate 90

# Make window fullscreen
hyper - h : yabai -m window --toggle zoom-fullscreen
hyper - f : yabai -m window --toggle native-fullscreen

# Minimize window
hyper - m : yabai -m window --minimize

# Close window
hyper - backspace : yabai -m window --close

# Toggle window float or tiled
hyper - t : yabai -m window --toggle float

# Adjust window size evenly
hyper - b : yabai -m space --balance
